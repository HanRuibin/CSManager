                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Image.Source" TargetName="img" Value="/Styling/graphics/shutdown_click.png"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
